<h1>Catalogo dei corsi</h1>

@for(int i = 0; i < 10; i++)
{
    <hr>
    <div class="row course">
        <div class="col-md-1">
            <img src="~/img/bug.png" width="52px" height="52px">
        </div>
        <div class="col-md-5">
            <h2>Titolo del corso</h2>
            <author><i>Adrian</i></author>
        </div>
        <div class="col-md-2 rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
            <i class="far fa-star"></i>
        </div>
        <div class="col-md-2 price">
            EUR 10,99<br><s>EUR 12,99</s>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="5">Detail</a>
        </div>
    </div>
}
